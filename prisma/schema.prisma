generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model MenuItem {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  image       String
}

model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  address     String
  phone       String
  status      String   @default("Order Received")
  items       Json
  createdAt   DateTime @default(now())
}